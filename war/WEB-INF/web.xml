<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <!-- Servlets -->


    <!-- Tasks -->

    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>servlets.HomeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchServlet</servlet-name>
        <servlet-class>servlets.SearchServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SignServlet</servlet-name>
        <servlet-class>servlets.SignServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TrainingServlet</servlet-name>
        <servlet-class>servlets.TrainingServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ExerciceServlet</servlet-name>
        <servlet-class>servlets.ExerciceServlet</servlet-class>
    </servlet>


    <!-- Servlets mapping -->

    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchServlet</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ExerciceServlet</servlet-name>
        <url-pattern>/exercice</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignServlet</servlet-name>
        <url-pattern>/sign</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TrainingServlet</servlet-name>
        <url-pattern>/training</url-pattern>
    </servlet-mapping>

    <!-- Tasks mapping -->

