<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <!-- Servlets -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>servlets.LoginServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>SigninServlet</servlet-name>
        <servlet-class>servlets.SigninServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>WelcomeServlet</servlet-name>
        <servlet-class>servlets.WelcomeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FetchServlet</servlet-name>
        <servlet-class>servlets.FetchServlet</servlet-class>
    </servlet>

    <!-- Tasks -->
    <servlet>
        <servlet-name>RegisterTask</servlet-name>
        <servlet-class>tasks.RegisterTask</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CleanTask</servlet-name>
        <servlet-class>tasks.CleanTask</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChannelServlet</servlet-name>
        <servlet-class>servlets.ChannelServlet</servlet-class>
    </servlet>


    <!-- Servlets mapping -->
    <servlet-mapping>
        <servlet-name>SigninServlet</servlet-name>
        <url-pattern>/signin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>WelcomeServlet</servlet-name>
        <url-pattern>/welcome</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FetchServlet</servlet-name>
        <url-pattern>/fetch</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChannelServlet</servlet-name>
        <url-pattern>/channel</url-pattern>
    </servlet-mapping>

    <!-- Tasks mapping -->
    <servlet-mapping>
        <servlet-name>RegisterTask</servlet-name>
        <url-pattern>/tasks/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CleanTask</servlet-name>
        <url-pattern>/tasks/clean</url-pattern>
    </servlet-mapping>

